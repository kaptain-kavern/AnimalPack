  <ThingDef ParentName="CK_HornBase">
    <defName>CK_BongoHorn</defName>
    <label>bongo horn</label>
    <description>A bongo's horn. It's valuable in most markets. This is a trophy.</description>
    <graphicData>
      <texPath>Things/Item/Special/BongoHorn</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <MarketValue>250</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
	  <Mass>1.2</Mass> <!-- ElephantTusk's mass = 1.8 -->
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.4</DeteriorationRate>
      <MeleeWeapon_DamageAmount>12</MeleeWeapon_DamageAmount>
      <MeleeWeapon_Cooldown>2</MeleeWeapon_Cooldown>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <meleeDamageDef>Scratch</meleeDamageDef>
      </li>
    </verbs>
  </ThingDef>

